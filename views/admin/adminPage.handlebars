{{!-- bootstrap for adminPage --}}
<head>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<section>
    <div class="container">
        <div class="row">
            <div style="margin-left: auto;margin-right: auto;" class="col-md-4">
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                <h3 class="text-center">Add Product</h3>
        <div class="form-group ">
            <label for="">IBN Number</label>
            <input type="text" class="form-control" name="IBN">
        </div>
        <div class="form-group pt-3">
            <label for="">Book Title</label>
            <input type="text" class="form-control" name="Title">
        </div>
        <div class="form-group pt-3">
            <label for="">Autor Name</label>
            <input type="text" class="form-control" name="Autor">
        </div>
        <div class="form-group pt-3">
            <label for="">Language</label>
            <input type="text" class="form-control" name="Language">
        </div>
        <div class="form-group pt-3">
            <label for="">Cover Image</label>
            <input name="Image" type="file" class="form-control" >
        </div>
        <div class="form-group pt-3">
            <label for="">Description</label>
            <input type="text" class="form-control" name="Description">
        </div>
        <div class="form-group pt-3">
            <label for="">Link to flipkart</label>
            <input type="text" class="form-control" name="LinkFlipkart">
        </div>
        <div class="form-group pt-3">
            <label for="">Link to amazon</label>
            <input type="text" class="form-control" name="LinkAmazon">
        </div>
        
        <div class="form-group pt-3">
            <label for="">Year of Publication</label>
            <input type="text" class="form-control" name="Year">
        </div>
        <div class="form-group pt-3">
            <label for="">Genre</label>
            <input type="text" class="form-control" name="Genre">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Add</button>
        </form>

            </div>
            
        </div>
    </div>
</section>